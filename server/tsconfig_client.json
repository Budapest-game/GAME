
{
  "compilerOptions": {
    "outDir": "../dist",
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["DOM", "es2018"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "typeRoots": ["../node_modules/@types", "../src/types.d.ts"],
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitThis": true,
  },
  "include": [
    "../src/**/*",
    "../.d.ts",
    "../tests/jest.setup.ts"
  ],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx"
  ]
}

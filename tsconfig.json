{
  "compilerOptions": {
    "target": "es2016",
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "outDir": "static/js/",
    "lib": ["es2016","DOM"],
    "jsx": "react",
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types", "src/types.d.ts"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "./node_modules/@types",
    "./.d.ts",
    "./node_modules/@types",
    "tests/jest.setup.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
